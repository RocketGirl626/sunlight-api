<h1>Bill Lookup</h1>

<form>
  <div class="form-group">
    <label for="date">Date</label>
    {{input value=date id="date" placeholder="enter yyyy-mm-dd"}}
  </div>
  <div class="form-group">
    <label for="range">Range</label>
    {{input value=range id="range" placeholder="enter day or week"}}
  </div>
  <div class="form-group">
    <label for="chamber">Chamber</label>
    {{input value=chamber id="chamber" placeholder="enter house or senate"}}
  </div>

  <button class="btn btn-primary" {{action 'submit'}}>Submit</button>
</form>

<hr>

{{outlet}}
